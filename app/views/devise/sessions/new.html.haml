.form-column
  %br
  %br
  %h1 Sign in
  %br
  %br
  =form_for(resource, as: resource_name, url: session_path(resource_name), class: "form", id: "new_user") do |f|
    .form-group
      =f.label :email
      =f.email_field :email
    .form-group
      =f.label :password
      =f.password_field :password, autocomplete: "off"
    -if devise_mapping.rememberable?
      .form-group
        =f.check_box :remember_me
        =f.label :remember_me
    =f.submit "Sign in"
  %br

  = link_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2)
