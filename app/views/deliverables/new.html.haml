.row
  .col-md-8.col-md-offset-2
    %br
    %br
    %h1 Create Deliverable
    %br
    %br

    = form_for([@project, @deliverable]) do |f|
      .form-group
        = f.label :title
        = f.text_field :title, class: "form-control"
      .form-group
        = f.label :description
        = f.text_area :description, rows: "6", class: "form-control"
      .form-group.col-md-3
        = f.label :timebox
        = f.date_field :timebox, :order => [:month, :day, :year], class: "form-control"
      %br
      %br
      %br
      %br
      %br
      = f.submit "Create Deliverable"
      %br
      %br
