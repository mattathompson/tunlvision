.form-column
  %br
  %br
  %h1 Edit Project Information
  %br
  %br

  = form_for(@project) do |f|
    = f.label :title
    = f.text_field :title

    = f.label :client
    = f.text_field :client

    = f.label :description
    = f.text_area :description, rows: "6"

    .date-field
      = f.label :deadline
      = f.date_field :deadline, :order => [:month, :day, :year]

    = f.submit "Update Project"
    %br
    %br
