%head
  %link{:href => "http://fonts.googleapis.com/css?family=Questrial", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "http://fonts.googleapis.com/css?family=Sanchez:400italic,400", :rel => "stylesheet", :type => "text/css"}
%br
.half-column
  %article.type-system-geometric
    %p.type= "Project Deadline:  #{@project.deadline.strftime("%Y-%m-%d")}"
    %a.float-right{:href => "#{edit_project_path(@project)}"}
      %button Edit Project

    %h1
      %strong= @project.title
    %p
      = @project.description



    %h4= @project.client
    %br
    %p
      =@project.client_description

    %p
      %strong Email:
      %a{:href => "mailto:#{@project.client_email}"}= @project.client_email
    %p
      %strong Website:
      %a{:href => "http://#{@project.client_website_url}"}= @project.client_website_url
