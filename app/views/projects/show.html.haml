.page-header
  %h1
    = @project.title
    %small= @project.client
    .pull-right
      %small= link_to "Edit |", edit_project_path(@project)
      %small= link_to "Delete", project_path(@project), method: :delete

=link_to "Add Deliverable", new_project_deliverable_path(@project)

%table.table.table-striped
  %thead
    %tr
      %th Deliverable
      %th Timebox
  %tbody
    -@project.deliverables.each do |deliverable|
      %tr
        %td= link_to deliverable.title, project_deliverable_path(@project, deliverable)
        %td= deliverable.timebox
