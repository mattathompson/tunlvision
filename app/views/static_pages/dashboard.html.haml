.page-header
  %h1
    Dashboard
    %small= current_user.name
    %small.pull-right= link_to "Create Project", new_project_path, id: "new-project"
- if !@projects.empty?

  %row
    .col-md-6.col-md-offset-4
      = paginate @projects
    .cards
      -@projects.each do |project|
        .card
          .card-image
            %img{:alt => "", :src => "https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/mountains.png"}
          .card-header
            =link_to project.title, project_path(project)
          .card-copy
            = project.description.truncate(150)
          .card-stats
            %ul
              %li
                = project.deadline.strftime("%Y-%m-%d")
                %span Deadline
              %li
                -if project.active?
                  Active
                -else
                  Finished
                %span Status
              %li
                = project.deliverables.count
                %span Objectives
